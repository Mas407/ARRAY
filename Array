 //For safe Numbers in Array ::
#include<iostream>
using namespace std;
int main(){
	int i,arr[5];
	for( i=1; i<=5; i++){
		cout<<"Enter the number = "; 
		cin>>arr[i];
		
	}
	for(i=1; i<=5; i++){
		cout<<arr[i]<<endl;
	}
	return 0;
}
//For reverse order to print the safe value in Array 
#include<iostream>
using namespace std;
int main(){
	int i,arr[5];
	for( i=1; i<=5; i++){
		cout<<"Enter the number = ";
		cin>>arr[i];
		
	}
	for(i=5; i>=1; i--){
		cout<<arr[i]<<endl;
	}
	return 0;
}
//For Sum of the number ::
#include<iostream>
using namespace std;
int main(){
	int i,arr[5];
	int sum=0;
	for(i=1; i<=5; i++){
		cout<<"Enter the number = ";
		cin>>arr[i];
		sum+=arr[i];
	}
	cout<<"The Sum of the Numbers is : "<<arr[i];
	return 0;
}
//For Multiplication (product all the numbers )
#include<iostream>
using namespace std;
int main(){
	int i,arr[5];
	int prod=1;
	for(i=1; i<=5; i++){
		cout<<"Enter the number = ";
		cin>>arr[i];
		prod*=arr[i];
	}
	cout<<"The Product of the Numbers is : "<<arr[i];
	return 0;
}
//For to get the Average of the number ::
#include<iostream>
using namespace std;
int main(){
	int i,avg,arr[5];
	int sum=0;
	for(i=1; i<=5; i++){
		cout<<"Enter the number = ";
		cin>>arr[i];
		sum+=arr[i];
	}
	avg=sum/5.0;
	cout<<"The Product of the Numbers is : "<<avg;
	return 0;
}
//For to chack the sum of even and odd numeber ::
#include<iostream>
using namespace std;
int main(){
	int i,a,arr['b'],sum=0,sum1=0,b;
	cout<<"Enter starting and ending number you want to see the sum of even and odd "<<endl;
	cout<<"Starting numeber  (For starting the number ::)";
	cin>>a;
	cout<<"Enter the Ending Number = ";
	cin>>b;
	cout<<endl;
	for(i=a; i<=b; i++){
		cout<<"Enter the number = ";
		cin>>arr[i];
	
		if(arr[i]%2==0){
				sum+=arr[i];
		}
		else
		sum1+=arr[i];
	}
	cout<<"Sum of the Even Number is = "<<sum<<endl;
		cout<<"Sum of the odd Number is = "<<sum1<<endl;
return 0;
}
//for example you enter 5 numbers in array you want to cheack the number where the position you enter this number if you enter otherwise INVALID::
#include<iostream>
using namespace std;
int main(){
	int num,index=-1,arr[5];
	cout<<"Enter five numbers = ";
	for(int i=0; i<5; i++){
		cin>>arr[i];
	}
	cout<<"Enter the number you want to chack : ";
	cin>>num;
	for(int i=0; i<5; i++ ){
		if(arr[i]==num){
			index=i+1;
			break;
		}
	}
	if(index!=-1){
		cout<<"You enteres number   "<<num<<"  is  at position  "<<index;
	}
	else
	cout<<"INVALID";
return 0;
}
