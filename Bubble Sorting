//bubble sorting
#include<iostream>
using namespace std;
int main(){
int i,temp,arr[5];
for(i=0; i<5; i++){
cout<<"Enter the number in array ";
cin>>arr[i];
}
cout<<endl<<endl;
cout<<"Values in Array \t ";
for(i=0; i<5; i++){
cout<<arr[i]<<"\t";
}
for(i=0; i<5; i++)
for(int j=0; j<4-i; j++)
if(arr[j]>arr[j+1]){  
temp=arr[j];
arr[j]=arr[j+1];
arr[j+1]=temp;
}
cout<<endl;
cout<<endl<<endl;
cout<<"After Sorting this Values ";
for(i=0; i<5; i++){
cout<<" "<<arr[i]<<" ";
}
cout<<endl<<endl;
return 0;	
}

#include <iostream>
using namespace std;

int main() {
    int arr[] = {-2, 1, -3, 4, -1, 2, 1, -5, 4};
    int size = sizeof(arr) / sizeof(arr[0]);

    int maxSum = arr[0];  
    int currentSum = 0;

    for (int i = 0; i < size; i++) {
        currentSum += arr[i]; 

        if (currentSum > maxSum) 
            maxSum = currentSum;  

        if (currentSum < 0) 
            currentSum = 0; 
    }

    cout << "Maximum subarray sum is: " << maxSum << endl;
    return 0;
}


#include <iostream>
using namespace std;

int main() {
    int arr[] = {2, 7, 3, 6, 90}; 
    int target = 9; 
    int size = sizeof(arr) / sizeof(arr[0]); 

    for (int i = 0; i < size; i++) { 
        for (int j = i + 1; j < size; j++) { 
            if (arr[i] + arr[j] == target) {  
                cout << arr[i] << " + " << arr[j] << " = " << target << endl;
            }
        }
    }

    return 0;
}


