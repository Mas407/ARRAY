#include<iostream>
#include<climits>
using namespace std;
int main(){
    int n;
    cout<<"Enter the size of array ";
    cin>>n;
    int arr[n];
    for(int i=0; i<n; i++){
        cout<<"Enter the number you want to store in array ";
        cin>>arr[i];
    }cout<<endl;
    for(int i=0; i<n; i++){
        cout<<"The values in array ::> "<<arr[i]<<endl;
    }cout<<endl;
int max=INT_MIN; int min=INT_MAX;
for(int i=0; i<n; i++){
    if(arr[i]>max)
    max=arr[i];
    if(arr[i]<min)
    min=arr[i];
}
cout<<"The maximum value is "<<max<<endl<<"The minimum value is  "<<min;
return 0;

}
